{
  "name": "mintailor",
  "version": "0.0.1",
  "description": "A Tailwind CSS Components",
  "main": "index.js",
  "scripts": {
    "watch-css": "npx tailwindcss -i ./src/main.css -o ./dist/output.css --watch",
    "build": "node scripts/build.js ./src ./dist && npx tailwindcss -i ./src/main.css -o ./dist/output.css",
    "live": "live-server ./dist --no-browser --no-css-inject --wait=500",
    "dev": "MINTAILOR_WATCH=1 npm run build & npm run live & npm run watch-css",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anhhaome/mintailor.git"
  },
  "author": "anhhao.me <hi@anhhao.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anhhaome/mintailor/issues"
  },
  "homepage": "https://github.com/anhhaome/mintailor#readme",
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "chai": "^4.3.4",
    "chokidar": "^3.5.3",
    "eta": "^1.12.3",
    "koa": "^2.13.4",
    "live-server": "^1.2.1",
    "mocha": "^9.1.3",
    "mz": "^2.7.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "object-path": "^0.11.8",
    "push-dir": "^0.4.1",
    "ramda": "^0.27.1",
    "supertest": "^6.1.6",
    "tailwindcss": "^3.0.22"
  }
}
